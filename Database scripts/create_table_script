CREATE TABLE user_details (
  id INT PRIMARY KEY NOT NULL,
  username VARCHAR(100) NULL DEFAULT NULL,
  role_id INT NULL DEFAULT NULL,
  email VARCHAR(125) NOT NULL,
  first_name VARCHAR(100) NOT NULL,
  last_name VARCHAR(100) NOT NULL,
  middle_name VARCHAR(50) NULL DEFAULT NULL,
  gender VARCHAR(10) NULL DEFAULT NULL,
  password VARCHAR(255) NULL DEFAULT NULL,
  is_password_autogenerated BOOLEAN DEFAULT false,
  phone VARCHAR(25) NULL DEFAULT NULL,
  secondary_email VARCHAR(125) NULL DEFAULT NULL,
  is_active BOOLEAN NOT NULL DEFAULT true,
  status_change_reason VARCHAR(200) NULL,
  is_non_locked BOOLEAN DEFAULT true,
  number_of_attempts SMALLINT NOT NULL DEFAULT 0,
  created_by INT NOT NULL,
  created_date TIMESTAMP NOT NULL,
  modified_by INT NOT NULL,
  modified_date TIMESTAMP NOT NULL,
  version SMALLINT NOT NULL DEFAULT 0,
  FOREIGN KEY (role_id) REFERENCES role (id))             	

CREATE INDEX user_role_id_fk ON user_details (role_id ASC);

*****************************************************************

CREATE TABLE role (
  id INT PRIMARY KEY NOT NULL,
  description VARCHAR(255) NULL DEFAULT NULL,
  name VARCHAR(255) NOT NULL,
  created_by INT NOT NULL,
  created_date TIMESTAMP NOT NULL,
  modified_by INT NOT NULL,
  modified_date TIMESTAMP NOT NULL,
  version SMALLINT NOT NULL DEFAULT 0)